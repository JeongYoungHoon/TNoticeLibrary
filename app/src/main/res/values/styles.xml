<resources  xmlns:tools="http://schemas.android.com/tools">



    <style name="TranslucentTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:actionBarStyle" tools:targetApi="14">@style/TansanActionBar</item>
        <item name="android:colorPrimary" tools:targetApi="21">#ffc5cdfb</item>
        <item name="android:colorPrimaryDark" tools:targetApi="21">#ffc5cdfb</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>
        <item name="android:statusBarColor" tools:targetApi="21">#ff99a3dd</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TansanActionBar" tools:targetApi="14" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">

        <item name="android:background">#ff99a3dd</item>

    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="loading">
        <item name="android:indeterminateDrawable">@drawable/progress_ani</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">400</item>
    </style>

    <style name="set_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/tr_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="set_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:background">@drawable/tr_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>
	<style name="set_item_tv">
		<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
	</style>

    <style name="set_div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/tansan</item>
    </style>

    <style name="set_cb_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/tr</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="act_menu_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@color/tansan</item>
        <item name="android:layout_weight">0</item>
        <item name="android:orientation">horizontal</item>
    </style>
	
	<style name="act_menu_btn">
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:layout_weight">0</item>
        <item name="android:clickable">true</item>
    </style>
	<style name="act_menu_icon">
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:padding">5dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:layout_weight">0</item>
    </style>
	<style name="act_menu_bar_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@color/tr</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="act_menu_bar_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/tr_bg</item>
        <item name="android:onClick">goMain</item>
    </style>

    <style name="act_menu_bar_empty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/tr</item>
    </style>

    <style name="act_menu_bar_back_iv">
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_weight">0</item>
        <item name="android:src">@drawable/menu_right</item>
    </style>

    <style name="act_menu_bar_back_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@color/tr</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="act_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dip</item>
    </style>

    

    <style name="act">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="btn" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/blue_btn</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">30dip</item>
        <item name="android:paddingRight">30dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:textColor">@color/white</item>
		<item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="view_5dip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dip</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@color/tr</item>
    </style>

    <style name="view_10dip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dip</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@color/tr</item>
    </style>

    <style name="view_15dip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">15dip</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@color/tr</item>
    </style>

    <style name="view_20dip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dip</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@color/tr</item>
    </style>

    <style name="view_30dip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@color/tr</item>
    </style>

</resources>